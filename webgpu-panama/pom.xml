                                    dest="${project.build.directory}/downloads/"
                                    verbose="false"
                                    usetimestamp="true" />
                                <unzip
                                    src="${project.build.directory}/downloads/wgpu-${wgpu.native}-${wgpu.native.build}.zip"
                                    dest="${project.build.directory}/downloads-unzipped/"
                                />
                            </target>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
